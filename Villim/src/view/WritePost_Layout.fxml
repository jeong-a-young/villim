<AnchorPane prefHeight="900.0" prefWidth="1600.0" style="-fx-background-color: #ffffff;" stylesheets="@../application/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.WritePost_Controller">
   <children>
      <ImageView fitHeight="899.0" fitWidth="1599.0" layoutX="3.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/writePostPage.png" />
         </image>
      </ImageView>
      <TextField fx:id="write_title" layoutX="310.0" layoutY="226.0" prefHeight="62.0" prefWidth="772.0" promptText="제목을 입력해 주세요.">
         <font>
            <Font size="25.0" />
         </font>
      </TextField>
      <TextArea fx:id="write_content" layoutX="310.0" layoutY="310.0" prefHeight="300.0" prefWidth="997.0" promptText="내용을 입력해 주세요.">
         <font>
            <Font size="25.0" />
         </font>
      </TextArea>
      <ComboBox fx:id="categoryComboBox" layoutX="1109.0" layoutY="226.0" prefHeight="62.0" prefWidth="197.0" promptText="카테고리" styleClass="grayComboBox" />
